{% extends 'shared/layout/base.html.twig' %}
{% block title 'Mes contacts favoris' %}

{% block header %}
    {% embed "shared/component/_header.html.twig" %}
        {% block header_title  'Mes contacts favoris' %}
        {% block header_action_list %}
            <li class="btn-group">
                <a href="{{ path('app_index') }}" class="btn btn-white btn-dim btn-outline-light">
                    {{ 'arrow-long-left' | icon }}
                    <span>tous les contacts</span>
                </a>
                <a href="{{ path('app_favorite_update') }}" class="btn btn-white btn-dim btn-outline-light">
                    {{ 'star' | icon }}
                    <span>ajouter aux favoris</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% if data | length > 0 %}
        <div class="row g-gs">
            {% for contact in data %}
                <div class="col-sm-6 col-lg-4 col-xxl-3">
                    {% include 'component/_contact_card.html.twig' with {contact: contact} %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card card-stretch">
            <div class="card-body">
                <div class="d-flex justify-content-center align-center">
                    <div class="nk-block-content nk-error-ld text-center">
                        <img src="{{ asset('images/contact.svg') }}" alt="aucune donnÃ©es" width="200">
                        <p class="nk-error-description">Vous n'avez aucun contact favoris</p>
                        <a href="{{ path('app_favorite_update') }}" class="btn btn-primary">
                            Ajouter aux favoris
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
